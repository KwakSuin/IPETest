<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2E6"
    tools:context=".write.problem50.Write50_01">

    <TextView
        android:id="@+id/test01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write50_001"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/test01_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singleton	"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/test01_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/test01_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Composite"
                android:textSize="13sp"/>
            <RadioButton
                android:id="@+id/test01_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bridge"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/error01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="오답"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:visibility="invisible" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/test02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write50_002"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/test02_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메소드"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test02_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클래스"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test02_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상속성"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test02_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지"
            android:textSize="13sp"/>
            <TextView
                android:id="@+id/error02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오답"
                android:visibility="invisible"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/test03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write50_003"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/test03_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집단화"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test03_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상속성"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test03_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캡슐화"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test03_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연관성"
            android:textSize="13sp"/>

            <TextView
                android:id="@+id/error03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오답"
                android:visibility="invisible"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/test04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write50_004"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/test04_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rumbaugh 방법"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test04_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booch 방법"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test04_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jacobson 방법"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test04_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wirfs-Brocks 방법"
            android:textSize="13sp"/>

            <TextView
                android:id="@+id/error04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오답"
                android:visibility="invisible"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/test05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/write50_005"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/test05_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연상 코드"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test05_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="블록 코드"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test05_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="순차 코드"
            android:textSize="13sp"/>
        <RadioButton
            android:id="@+id/test05_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="표의 숫자 코드"
            android:textSize="13sp"/>

            <TextView
                android:id="@+id/error05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오답"
                android:visibility="invisible"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        app:backgroundTint="#BDBDBD"/>

</LinearLayout>