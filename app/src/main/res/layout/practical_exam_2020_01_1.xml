<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".practical.exam.PracticalExam_2020_01_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2020년 제 1회 실기문제(코드제외)"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PR_Exam2020_01_01"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/hint01_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/answer01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="50"
                android:hint="정답"
                android:textColor="#005766" />
            <TextView
                android:id="@+id/hint01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="애플리케이션 테스트중 동일한 테스트 케이스를 지속적으로 반복하면 추가 결함을 발견할 수 없게 된다."
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>


            <TextView
                android:id="@+id/text02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PR_Exam2020_01_02"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/hint02_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/answer02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="50"
                android:hint="정답"
                android:textColor="#005766" />
            <TextView
                android:id="@+id/hint02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이터웨어하우징에서 수집되고 분석된 자료를 사용자에게 제공하기 위해 분류 및 가공되는 요소기술이다."
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/text03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PR_Exam2020_01_03"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/hint03_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/answer03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="정답"
                android:textColor="#005766" />
            <TextView
                android:id="@+id/hint03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구문, 의미, 타이밍"
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/text04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PR_Exam2020_01_04"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/hint04_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/answer04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="정답"
                android:textColor="#005766" />
            <TextView
                android:id="@+id/hint04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XML"
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/text05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PR_Exam2020_01_05"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/hint05_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/answer05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="정답"
                android:textColor="#005766" />
            <TextView
                android:id="@+id/hint05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JSON"
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/text06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PR_Exam2020_01_06"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/hint06_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/answer06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="정답"
                android:textColor="#005766" />
            <TextView
                android:id="@+id/hint06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(대기 시간+서비스 시간)/서비스 시간"
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/text07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PR_Exam2020_01_07"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/hint07_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정답"
                    android:backgroundTint="#BDBDBD"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/answer07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:hint="정답"
                android:textColor="#005766" />
            <TextView
                android:id="@+id/hint07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원자성, 독립성"
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="다음"
                android:textColor="#000000"
                app:backgroundTint="#BDBDBD" />

    </LinearLayout>
</LinearLayout>