        <EditText
            android:id="@+id/answer18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="정답"
            android:textColor="#005766" />

        <TextView
            android:id="@+id/text19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/practical50_019"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/error19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오답"
