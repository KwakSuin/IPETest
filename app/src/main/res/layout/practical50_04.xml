        <EditText
            android:id="@+id/answer17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="정답"
            android:textColor="#005766" />

        <TextView
            android:id="@+id/text18"
            android:layout_width="match_parent"
