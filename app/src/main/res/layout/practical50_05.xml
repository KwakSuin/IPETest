            android:textColor="#000000"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/error23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오답"
            android:textColor="#ff0000"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/answer23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="정답"
            android:textColor="#005766" />

        <TextView
            android:id="@+id/text24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/practical50_024"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/error24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오답"
            android:textColor="#ff0000"
